{
  "name": "upline-api-server",
  "version": "1.0.0",
  "description": "Upline API Server",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf build && tsc -p src/tsconfig.json",
    "build:test": "npm run build && tsc -p test/tsconfig.json",
    "start": "cross-env NODE_ENV=production node -r dotenv/config build/src/index.js",
    "docker-up:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker-up:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint --fix",
    "prettify": "prettier --write .",
    "test": "jest -c jest.config.js",
    "test:fix": "npm run test -u",
    "test:watch": "npm run test --watch",
    "test:build": "jest -c jest.build.config.js",
    "db-migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "db-migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "db-migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "db-migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "cross-env NODE_ENV=development ts-node --project src/tsconfig.json -r dotenv/config src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettify && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "repository": "https://github.com/SickSAMA/upline-api-server",
  "author": "Kanqiang Sun",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "apollo-server-testing": "^2.18.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "apollo-server-express": "^2.17.0",
    "class-validator": "^0.12.2",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.26",
    "typeorm-typedi-extensions": "^0.2.3"
  }
}
